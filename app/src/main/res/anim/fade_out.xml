<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

<!--    Animation for list fragment to fade out-->

    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="300"
        />

    <scale
        android:fromXScale="100%"
        android:fromYScale="100%"
        android:toXScale="43%"
        android:toYScale="43%"
        android:duration="300"
        android:pivotX="50%"
        android:pivotY="50%"
        />

</set>