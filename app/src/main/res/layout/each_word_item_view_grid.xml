<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="197dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/small_corner_rad"
        android:elevation="@dimen/small_ele"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_word_text_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_word_name"
                android:textAlignment="center"
                android:fontFamily="@font/font_raleway"
                android:textSize="@dimen/standard_text_size"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/standard_padding"
                />

            <TextView
                android:id="@+id/txt_word_mean_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_word_name"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/font_raleway"
                android:textStyle="italic"
                android:textSize="@dimen/small_text_size"
                android:textAlignment="center"
                android:maxLength="47"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/standard_padding"
                />


            <ImageButton
                android:id="@+id/imgbtn_hear_pronun_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:background="@android:color/transparent"
                android:tint="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/high_padding"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>